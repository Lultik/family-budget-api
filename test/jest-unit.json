{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testRegex": "test/.*\\.(test|spec)\\.(js|ts)$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["src/**/*.(t|j)s", "!src/**/*.module.(t|j)s"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "coverageThreshold": {
    "global": {
      "statements": 75,
      "branches": 75,
      "functions": 65,
      "lines": 75
    }
  }
}
